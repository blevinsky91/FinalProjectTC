@{
}


@model List<Network>

<body>
    <div class="grid-container">
        @foreach (var item in Model)
        {
            @if (item.Location.Country == "US")
            {
                <div class="flex-box">
                    <h1 class="text">@item.Name</h1>
                    <h2 class="text">@item.Location.City</h2>
                    @if (item.Ebikes == true)
                        {
                    <h2>There are E-Bikes available at this location!</h2>
                        }
                     else
                        {
                    <h2>Sorry, there are no E-Bikes available at this location.</h2>
                     }
                </div>
            }
        }
    </div>

    <a href="/Home/Index">Go to Home</a>
</body>
