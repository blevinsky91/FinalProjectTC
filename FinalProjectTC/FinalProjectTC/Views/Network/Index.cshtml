@{
}


@model List<Network>
<head>
    <style>
        body {
            background-image: url(https://c8.alamy.com/comp/2BX43PA/blank-outline-map-of-united-states-of-america-simplified-vector-map-made-of-thick-black-outline-on-white-background-2BX43PA.jpg);
        }
    </style>
</head>
<body>
    <div class="grid-container">
        @foreach (var item in Model)
        {
            @if (item.Location.Country == "US")
            {
                <div class="flex-box" style="border: double">
                    <h1 class="text" style="color: red">@item.Name</h1>
                    <h2 class="text" style="color: navy">@item.Location.City</h2>
                    @if (item.Ebikes == true)
                        {
                    <h2>There are E-Bikes available at this location!</h2>
                        }
                     else
                        {
                    <h2>Sorry, there are no E-Bikes available at this location.</h2>
                     }
                </div>
            }
        }
    </div>

    <a href="/Home/Index">Go to Home</a>
</body>
